<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limyel.blog.dao.MenuMapper">
  <resultMap id="BaseResultMap" type="com.limyel.blog.entity.Menu">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
    <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
    <result column="deleted" jdbcType="BIT" property="deleted" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="path" jdbcType="VARCHAR" property="path" />
    <result column="sequence" jdbcType="INTEGER" property="sequence" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
  </resultMap>

  <resultMap id="Menu" type="com.limyel.blog.entity.vo.MenuVO">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="path" jdbcType="VARCHAR" property="path" />
    <result column="sequence" jdbcType="INTEGER" property="sequence" />
    <collection column="id" property="subMenus" select="com.limyel.blog.dao.MenuMapper.selectSubMenu" />
  </resultMap>

  <select id="selectVO" resultMap="Menu">
    select id, name, path, sequence from menu where parent_id is null
  </select>

  <select id="selectSubMenu" parameterType="java.lang.Long" resultMap="Menu">
    select id, name, path, sequence from menu where parent_id = #{parentId}
  </select>

  <delete id="deleteByParentId" parameterType="java.lang.Long">
    delete from menu where parent_id = #{parentId}
  </delete>
</mapper>