<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limyel.blog.mapper.TagMapper">
  <resultMap id="BaseResultMap" type="com.limyel.blog.entity.Tag">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
    <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
    <result column="deleted" jdbcType="BIT" property="deleted" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>

  <resultMap id="TagInPost" type="com.limyel.blog.entity.dto.TagInPost">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
  </resultMap>

  <select id="selectByPostId" resultMap="TagInPost" parameterType="java.lang.Long">
    select t1.id, t1.name from tag t1 inner join post_tag t2 on t2.tag_id = t1.id and t2.post_id = #{postId} where t1.deleted = 0
  </select>
</mapper>